<html lang="en">
    <head>
        <meta content="text/html; charset=utf-8" />
        <title>Tramonto Email</title>
    </head>
    <body style="background-color: rgb(253, 236, 226)">
        <div style="padding: 20px; background-color: rgba(255, 255, 255, 0.8)">
            <img src="cid:logo" />
        </div>
        <div style="padding: 20px">
            <h2>Din bokning har ändrats.</h2>
            <hr />
            <h3>Boknings ID:</h3>
            <p>{{ id }}</p>
            <hr />
            <ul style="list-style: none">
                <li>Tillfälle: {{ date }}</li>
                <li>Antal personer: {{ guestCount }}st</li>
                <li>Allergier: {{ allergies }}</li>
            </ul>
            <hr />
            <div style="padding-top: 20px; padding-bottom: 20px">
                <a
                    style="
                        border: 4px solid grey;
                        padding: 10px;
                        color: black;
                        text-decoration: none;
                        background-color: white;
                        border-radius: 10px;
                        font-size: 20px;
                    "
                    href="{{ link }}"
                    >Ändra bokning</a
                >
            </div>
            <hr />
        </div>
        <div style="padding: 20px; background-color: rgba(255, 255, 255, 0.8)">
            <p>Kontakt: +46 12 123 12 12</p>
        </div>
    </body>
</html>
